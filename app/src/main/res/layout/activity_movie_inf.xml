<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/movie_item_inf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豆瓣"
            android:layout_marginLeft="30dp"/>

        </RelativeLayout>

    <TextView
        android:id="@+id/movie_inf_inf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="影片信息"
        android:layout_below="@+id/movie_item_inf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movie_inf_inf"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/movie_director_inf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="导演：" />

        <TextView
            android:id="@+id/movie_avatar_inf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="主演：" />

        <TextView
            android:id="@+id/movie_year_inf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="上映：" />

        <TextView
            android:id="@+id/movie_type_inf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="类型：" />
    </LinearLayout>
</RelativeLayout>