<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/movie_image" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:text="电影名称"
        android:textSize="20dp"
        android:gravity="center|left"
        android:id="@+id/movie_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"
        android:layout_marginLeft="10dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:id="@+id/movie_ratingBar"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/movie_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/movie_average"
        android:layout_below="@+id/movie_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/movie_ratingBar"
        android:layout_toEndOf="@+id/movie_ratingBar"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="导演："
        android:textSize="10dp"
        android:id="@+id/movie_director"
        android:layout_below="@+id/movie_average"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="演员："
        android:textSize="10dp"
        android:id="@+id/movie_avatar"
        android:layout_below="@+id/movie_director"
        android:layout_toRightOf="@+id/movie_image"
        android:layout_toEndOf="@+id/movie_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>
    </LinearLayout>